                    <sdk:Label Content="Level Requirement" FontFamily="Sertig.otf#Sertig" FontSize="20" FontWeight="Bold" Foreground="White" Height="23" Margin="6,184,190,0" Name="label8" Padding="3,0" VerticalAlignment="Top" />
                    <sdk:Label Content="Skill Point Cost" FontFamily="Sertig.otf#Sertig" FontSize="20" FontWeight="Bold" Foreground="White" Height="23" Margin="6,214,190,0" Name="label9" Padding="3,0" VerticalAlignment="Top" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,184,99,0" Name="levelBaseBox" Padding="2,0" Text="1" VerticalAlignment="Top" Width="85" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content="+ (" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,184,71,0" Name="label10" Padding="3" VerticalAlignment="Top" Width="22" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,184,18,0" Name="levelBonusBox" Padding="2,0" Text="1" VerticalAlignment="Top" Width="50" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content=")" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" HorizontalAlignment="Right" Margin="0,184,6,0" Name="label11" Padding="3" Width="16" Height="23" VerticalAlignment="Top" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,214,99,0" Name="costBaseBox" Padding="2,0" Text="1" VerticalAlignment="Top" Width="85" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content="+ (" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,214,71,0" Name="label12" Padding="3" VerticalAlignment="Top" Width="22" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,214,18,0" Name="costBonusBox" Padding="2,0" Text="0" VerticalAlignment="Top" Width="50" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content=")" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,214,6,0" Name="label13" Padding="3" VerticalAlignment="Top" Width="16" />
                    <sdk:Label Content="Mana Cost" FontFamily="Sertig.otf#Sertig" FontSize="20" FontWeight="Bold" Foreground="White" Height="23" Margin="6,244,190,0" Name="label14" Padding="3,0" VerticalAlignment="Top" />
                    <sdk:Label Content="Cooldown" FontFamily="Sertig.otf#Sertig" FontSize="20" FontWeight="Bold" Foreground="White" Height="23" Margin="6,274,190,0" Name="label15" Padding="3,0" VerticalAlignment="Top" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,244,99,0" Name="manaBaseBox" Padding="2,0" Text="0" VerticalAlignment="Top" Width="85" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content="+ (" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,244,71,0" Name="label16" Padding="3" VerticalAlignment="Top" Width="22" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,244,18,0" Name="manaBonusBox" Padding="2,0" Text="0" VerticalAlignment="Top" Width="50" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content=")" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,244,6,0" Name="label17" Padding="3" VerticalAlignment="Top" Width="16" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,274,99,0" Name="cooldownBaseBox" Padding="2,0" Text="0" VerticalAlignment="Top" Width="85" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content="+ (" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,274,71,0" Name="label18" Padding="3" VerticalAlignment="Top" Width="22" />
