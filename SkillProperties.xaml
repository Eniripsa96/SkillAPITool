                    <sdk:Label Content="+ (" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" Height="23" HorizontalAlignment="Right" Margin="0,364,71,0" Name="rangeLabel1" Padding="3" VerticalAlignment="Top" Width="22" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,364,18,0" Name="rangeBonusBox" Padding="2,0" Text="0" VerticalAlignment="Top" Width="50" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
                    <sdk:Label Content=")" FontFamily="Sertig.otf#Sertig" FontSize="16" Foreground="White" HorizontalAlignment="Right" Margin="0,364,6,0" Name="rangeLabel2" Padding="3" Width="16" Height="23" VerticalAlignment="Top" />
                    <TextBox FontSize="18" FontWeight="Normal" Height="23" HorizontalAlignment="Right" Margin="0,394,99,0" Name="radiusBaseBox" Padding="2,0" Text="5" VerticalAlignment="Top" Width="85" MaxLength="0" FontFamily="Sertig.otf#Sertig" />
